{
  "name": "desktop-reactjs-boilerplate",
  "description": "(01 Jun 2023) ElectronJS, ReactJS 16.",
  "version": "1.2.0",
  "author": "https://www.github.com/kkamara",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "<com.desktop-reactjs-boilerplate>"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "npm run build && electron-builder --linux --win --mac --x64 --ia32 --publish never",
    "builder:build": "electron-builder --win --mac --x64 --publish never",
    "build": "npm run react-build && npm run builder:build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "axios": "^1.6.4",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.5",
    "sass": "^0.5.0"
  },
  "devDependencies": {
    "@testing-library/react": "^8.0.9",
    "@testing-library/user-event": "^7.1.2",
    "concurrently": "^8.2.0",
    "cross-env": "^6.0.0",
    "electron": "^25.1.0",
    "electron-builder": "^21",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
