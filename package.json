{
  "name": "desktop-reactjs-boilerplate",
  "description": "(01 Jun 2023) ElectronJS, ReactJS 16.",
  "version": "2.0.0",
  "author": "https://www.github.com/kkamara",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "<com.desktop-reactjs-boilerplate>"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "npm run build && electron-builder --win --x64 --publish never",
    "builder:build": "electron-builder --win --x64 --publish never",
    "build": "npm run react-build && npm run builder:build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "license": "BSD-3-Clause",
  "dependencies": {
    "axios": "^0.20.0",
    "bootstrap": "^5.3",
    "jquery": "^3.6.0",
    "popper.js": "^1.16.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.0",
    "sass": "^1.60.0",
    "web-vitals": "^3.3.2"
  },
  "devDependencies": {
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.1.0",
    "electron-builder": "^21",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
